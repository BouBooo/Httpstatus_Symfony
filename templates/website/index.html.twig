{% extends 'base.html.twig' %}

{% block title %}Hello WebsiteController!{% endblock %}

{% block body %}
<div class="container">
    <div class="header text-center">
        <h1>Fiche</h1>
        <a class="btn btn-info" href="{{ path('home') }}">
            <span class="glyphicon glyphicon-arrow-left "></span> 
            Retour
        </a>
        <h3>{{ website.name }}</h3>
        <h4>{{ website.url }}</h4>
	</div>
    
	<table class="table table-dark">
		<thead>
			<tr>
				<td>Url</td>
				<td>Date</td>
				<td>Code</td>
				<td>Status</td>
			</tr>
		</thead>
		<tbody>
            {% for status in website.statuses %}
            <tr>
                <td>
                    {{ website.url }}
                </td>
                <td>
                    {{ status.dateReport | date('d-m-Y') }}
                </td>
                <td>
                    {{ status.code }}
                </td>
                <td>
                    {% if status.code == 200 %}
                    <i class="fas fa-check-circle fa-1x" class="text-red"></i>
                    {% elseif status.code == 404 %}
                    <i class="fas fa-exclamation-triangle fa-1x"></i>
                    {% else %}
                    <i class="fas fa-exclamation-circle fa-1x"></i>
                    {% endif %}
                </td>
            </tr>
            {% endfor %}
        </tbody>
	</table>
</div>
{% endblock %}
